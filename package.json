{
  "name": "hugo-lunr-indexer",
  "version": "1.0.0",
  "description": "Generate Lunr indices for Hugo static sites by parsing front matter.",
  "main": "lib/hli.js",
  "bin": {
    "hli": "bin/hli.js",
    "hugo-lunr-indexer": "bin/hli.js"
  },
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "index": "hli -i 'content/**' -o 'public/lunr.json' -l 'toml'",
    "test:yaml": "hli -i 'content/text-yaml.md' -o 'public/lunr-yaml.json' -l 'yaml'",
    "test:toml": "hli -i 'content/text-toml.md' -o 'public/lunr-toml.json' -l 'toml'",
    "test:api": "test/api.js",
    "test": "npm run test:yaml & npm run test:toml & npm run test:api"
  },
  "keywords": [
    "lunr",
    "hugo",
    "index",
    "indexer",
    "toml",
    "yaml"
  ],
  "author": "Travis Clarke <travis.m.clarke@gmail.com> (https://www.travismclarke.com/)",
  "license": "Apache-2.0",
  "dependencies": {
    "glob": "^7.1.2",
    "gray-matter": "^3.0.2",
    "remove-markdown": "^0.2.0",
    "striptags": "^3.0.1",
    "toml": "^2.3.2"
  },
  "devDependencies": {}
}
